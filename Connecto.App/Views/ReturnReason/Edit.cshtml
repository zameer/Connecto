@{ Layout = null; }
<div ng-controller="ReturnReasonEditCtrl">
    <div class="page-header">
        <h1>Edit Return Reason </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-top"> Name </label>
                    <div class="col-sm-9">
                        <input ng-model="item.Name" type="text" id="form-field-6" placeholder="Name">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-top"> Description </label>
                    <div class="col-sm-9">
                        <input ng-model="item.Description" type="text" id="form-field-6" placeholder="Description">
                    </div>
                </div>
                <div class="space-6"></div>
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info" type="button" ng-click="edit()">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Submit
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" type="reset">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            Reset
                        </button>
                    </div>
                </div>
            </form>
            <!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#menu-csettings-main').syncMenu([{ name: "vendor", option: "o", }], { title: 'Vendors', link: '/Vendor' });
    });
</script>