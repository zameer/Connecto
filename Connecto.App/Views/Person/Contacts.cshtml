@{ Layout = null; }
<div ng-controller="PersonContactsCtrl">
    <div class="page-header">
        <h1>Add Contacts </h1>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-top"> Address # </label>
                    <div class="col-sm-9">
                        <input ng-model="item.AddressNo" type="text" id="form-field-6" placeholder="Address No">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-top"> Street </label>
                    <div class="col-sm-9">
                        <input ng-model="item.AddressStreet" type="text" id="form-field-1" placeholder="Address Street" class="col-xs-10 col-sm-5">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label no-padding-top"> City </label>
                            <div class="col-sm-3">
                                <input ng-model="item.City" type="text" id="form-field-6" placeholder="City">
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-top"> Province </label>
                            <div class="col-sm-3">
                                <input ng-model="item.Province" type="text" id="form-field-6" placeholder="Province">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="col-sm-6 control-label no-padding-top"> Land Number </label>
                            <div class="col-sm-3">
                                <input ng-model="item.LandNumber" type="text" id="form-field-6" placeholder="Land Number">
                            </div>
                        </div>
                    </div>

                    <div class="col-xs-6">
                        <div class="form-group">
                            <label class="col-sm-4 control-label no-padding-top"> Mobile Number </label>
                            <div class="col-sm-3">
                                <input ng-model="item.MobileNumber" type="text" id="form-field-6" placeholder="Mobile Number">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info" type="button" ng-click="addContact()">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Submit
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <button class="btn" type="reset" ng-click="resetContact()">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            Reset
                        </button>
                    </div>
                </div>
            </form>
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>Id</th>
                    <th>Land Number</th>
                    <th>Mobile Number</th>
                    <th>Address</th>
                    <th></th>
                </tr>
                <tr ng-repeat="e in items">
                    <td>{{e.ContactId}}</td>
                    <td>{{e.LandNumber}}</td>
                    <td>{{e.MobileNumber}}</td>
                    <td>{{e.AddressNo}}, {{e.AddressStreet}}. {{e.City}} {{e.Province}}</td>
                    <td>
                        <div class="hidden-sm hidden-xs btn-group">
                            <button class="btn btn-xs btn-info" ng-click="select(e.ContactId)"><i class="ace-icon fa fa-pencil bigger-120"></i></button>
                            @*<a class="btn btn-xs btn-warning" href="#"><i class="ace-icon fa fa-eye bigger-120"></i></a>*@
                            <button class="btn btn-xs btn-danger" ng-click="delete(e.ContactId)"><i class="ace-icon fa fa-trash-o bigger-120"></i></button>
                        </div>
                    </td>
                </tr>
            </table>
            <!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#menu-hr').syncMenu([{ name: "person", option: "o", }], { title: 'People', link: '/Person' });
    });
</script>